<?xml version="1.0"?>
<package format="2">
  <name>teleop_twist_joy_for_sample_robot</name>
  <version>2.6.0</version>
  <description>Generic joystick teleop for twist robots. This based on teleop_twist_joy.</description>

  <maintainer email="hijimasa@gmail.com">Masaaki Hijikata</maintainer>

  <license>BSD</license>

  <url type="website">http://wiki.ros.org/teleop_twist_joy</url>

  <author email="hijimasa@gmail.com">Masaaki Hijikata</author>

  <buildtool_depend>ament_cmake</buildtool_depend>

  <depend>geometry_msgs</depend>
  <depend>rclcpp</depend>
  <depend>rclcpp_components</depend>
  <depend>sensor_msgs</depend>

  <exec_depend>joy</exec_depend>

  <test_depend>ament_lint_auto</test_depend>
  <test_depend>ament_lint_common</test_depend>
  <test_depend>launch_ros</test_depend>
  <test_depend>launch_testing_ament_cmake</test_depend>
  <test_depend>launch_testing_ros</test_depend>

  <export>
    <build_type>ament_cmake</build_type>
  </export>
</package>
