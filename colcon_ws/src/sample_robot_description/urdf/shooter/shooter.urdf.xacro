<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="shooter_v0" params="parent *joint_origin">
        <joint name="shooter_shaft_link_joint" type="continuous">
          <xacro:insert_block name="joint_origin"/>
          <parent link="${parent}"/>
          <child link="shooter_shaft_link"/>
          <axis xyz="0 -1 0"/>
        </joint>

        <link name="shooter_shaft_link">
        </link>

        <joint name="shooter_body_link_joint" type="fixed">
          <origin rpy="0 0 0" xyz="0 0 0.0925"/>
          <parent link="shooter_shaft_link"/>
          <child link="shooter_body_link"/>
        </joint>

        <link name="shooter_body_link">
          <!--
          <visual>
                <geometry>
                  <mesh filename="file://$(find sample_robot_description)/meshes/STL/shooter_body.stl" />
                </geometry>
                <origin rpy="${pi/2} 0 ${pi/2}" xyz="0 -0.12 0"/>
                <material name="white"/>
          </visual>
          -->
          <collision>
                <geometry>
                  <mesh filename="file://$(find sample_robot_description)/meshes/STL/shooter_body.stl" />
                </geometry>
                <origin rpy="${pi/2} 0 ${pi/2}" xyz="0 -0.12 0"/>
          </collision>
          <inertial>
                <origin xyz="0 0 0"/>
                <mass value="20.0"/>
                <inertia ixx="0.1" ixy="0" ixz="0"
                                 iyy="0.1" iyz="0"
                                 izz="0.1" />
          </inertial>
        </link>

        <gazebo reference="shooter_body_link">
          <selfCollide>false</selfCollide>
          <mu1 value="0.0" />
          <mu2 value="0.0" />
          <kp value="30000000.0" />
          <kd value="50000000.0" />
        </gazebo>

        <joint name="shooter_mag_link_joint" type="continuous">
          <origin rpy="0 0 0" xyz="0 0 0.0"/>
          <parent link="shooter_body_link"/>
          <child link="shooter_mag_link"/>
          <axis xyz="0 1 0"/>
        </joint>

        <link name="shooter_mag_link">
          <visual>
                <geometry>
                  <mesh filename="file://$(find sample_robot_description)/meshes/STL/shooter_mag.stl" />
                </geometry>
                <origin rpy="0 0 ${pi/2}" xyz="0 0 0"/>
                <material name="white"/>
          </visual>
          <collision>
                <geometry>
                  <mesh filename="file://$(find sample_robot_description)/meshes/STL/shooter_mag.stl" />
                </geometry>
                <origin rpy="0 0 ${pi/2}" xyz="0 0 0"/>
          </collision>
          <inertial>
                <origin xyz="0 0 0"/>
                <mass value="1.0"/>
                <inertia ixx="0.1" ixy="0" ixz="0"
                                 iyy="0.1" iyz="0"
                                 izz="0.1" />
          </inertial>
        </link>
        
        <gazebo reference="shooter_mag_link">
          <selfCollide>false</selfCollide>
          <mu1 value="0.0" />
          <mu2 value="0.0" />
          <kp value="30000000.0" />
          <kd value="50000000.0" />
        </gazebo>

         <joint name="shooter_wheel_link_joint" type="continuous">
          <origin rpy="${-pi/2} 0 0" xyz="0.24 0 -0.145"/> <!-- disc pos x 0.18 z -0.0925 -->
          <parent link="shooter_body_link"/>
          <child link="shooter_wheel_link"/>
          <axis xyz="0 0 1"/>
        </joint>

        <link name="shooter_wheel_link">
          <visual>
                <geometry>
                  <cylinder length="0.18" radius="0.04" />
                </geometry>
                <material name="white"/>
          </visual>
          <collision>
                <geometry>
                  <cylinder length="0.18" radius="0.04" />
                </geometry>
          </collision>
          <inertial>
                <origin xyz="0 0 0"/>
                <mass value="1.0"/>
                <inertia ixx="0.1" ixy="0" ixz="0"
                                 iyy="0.1" iyz="0"
                                 izz="0.1" />
          </inertial>
        </link>

        <gazebo reference="shooter_wheel_link">
          <selfCollide>false</selfCollide>
          <mu1 value="10.0" />
          <mu2 value="10.0" />
          <kp value="30000000.0" />
          <kd value="50000000.0" />
        </gazebo>

         <joint name="shooter_wheel2_link_joint" type="continuous">
          <origin rpy="${-pi/2} 0 0" xyz="0.34 0 -0.145"/> <!-- disc pos x 0.18 z -0.0925 -->
          <parent link="shooter_body_link"/>
          <child link="shooter_wheel2_link"/>
          <axis xyz="0 0 1"/>
        </joint>

        <link name="shooter_wheel2_link">
          <visual>
                <geometry>
                  <cylinder length="0.18" radius="0.04" />
                </geometry>
                <material name="white"/>
          </visual>
          <collision>
                <geometry>
                  <cylinder length="0.18" radius="0.04" />
                </geometry>
          </collision>
          <inertial>
                <origin xyz="0 0 0"/>
                <mass value="1.0"/>
                <inertia ixx="0.1" ixy="0" ixz="0"
                                 iyy="0.1" iyz="0"
                                 izz="0.1" />
          </inertial>
        </link>

        <gazebo reference="shooter_wheel2_link">
          <selfCollide>false</selfCollide>
          <mu1 value="10.0" />
          <mu2 value="10.0" />
          <kp value="30000000.0" />
          <kd value="50000000.0" />
        </gazebo>

         <joint name="shooter_wheel3_link_joint" type="continuous">
          <origin rpy="${-pi/2} 0 0" xyz="0.34 0 -0.055"/> <!-- disc pos x 0.18 z -0.0925 -->
          <parent link="shooter_body_link"/>
          <child link="shooter_wheel3_link"/>
          <axis xyz="0 0 -1"/>
        </joint>

        <link name="shooter_wheel3_link">
          <visual>
                <geometry>
                  <cylinder length="0.18" radius="0.04" />
                </geometry>
                <material name="white"/>
          </visual>
          <collision>
                <geometry>
                  <cylinder length="0.18" radius="0.04" />
                </geometry>
          </collision>
          <inertial>
                <origin xyz="0 0 0"/>
                <mass value="1.0"/>
                <inertia ixx="0.1" ixy="0" ixz="0"
                                 iyy="0.1" iyz="0"
                                 izz="0.1" />
          </inertial>
        </link>

        <gazebo reference="shooter_wheel3_link">
          <selfCollide>false</selfCollide>
          <mu1 value="10.0" />
          <mu2 value="10.0" />
          <kp value="30000000.0" />
          <kd value="50000000.0" />
        </gazebo>

  </xacro:macro>

</robot>

